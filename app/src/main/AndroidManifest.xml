<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gold.android.videoplayer">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="gold.android.videoplayer.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:requestLegacyExternalStorage="true">
        <uses-library android:name="org.apache.http.legacy" android:required="false"/>
        <activity
            android:name="gold.android.videoplayer.ui.activity.MainActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--常规播放器示例,注意！！！必须添加：android:configChanges="orientation|screenSize"属性！！！-->
        <activity
            android:name="gold.android.videoplayer.ui.activity.VideoPlayerActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustResize|stateHidden">
        </activity>
        <!--直播拉流-->
        <activity
            android:name="gold.android.videoplayer.ui.activity.LivePlayerActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize">
        </activity>
        <!--双播放器同时播放示例,注意！！！必须添加：android:configChanges="orientation|screenSize"属性！！！-->
        <activity
            android:name="gold.android.videoplayer.ui.activity.VideosPlayerActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize">
        </activity>
        <!--垂直切片播放示例-->
        <activity
            android:name="gold.android.videoplayer.pager.activity.PagerPlayerActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>
        <!--列表自动播放-->
        <activity
            android:name="gold.android.videoplayer.video.ui.activity.PagerListActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"/>
        <!--RAW和Assets资源播放-->
        <activity
            android:name="gold.android.videoplayer.ui.activity.AssetsPlayerActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"/>
        <!--迷你窗口播放-->
        <activity
            android:name="gold.android.videoplayer.ui.activity.WindowPlayerActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"/>
        <!--悬浮窗口播放-->
        <activity
            android:name="gold.android.videoplayer.ui.activity.WindowGlobalPlayerActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"/>
        <!--连续播放一个视频列表-->
        <activity
            android:name="gold.android.videoplayer.ui.activity.VideoListPlayerActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"/>
        <!--无缝转场播放-->
        <activity
            android:name="gold.android.videoplayer.video.ui.activity.VideoDetailsActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            android:theme="@style/VideoAppTheme"/>
        <!--画中画-->
        <activity
            android:name="gold.android.videoplayer.ui.activity.PiPPlayerActivity"
            android:resizeableActivity="true"
            android:supportsPictureInPicture="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:theme="@style/VideoAppTheme"/>
        <!--弹幕交互示例-->
        <activity
            android:name="gold.android.videoplayer.ui.activity.DanmuPlayerActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize">
        </activity>
        <!--收费试看交互示例-->
        <activity
            android:name="gold.android.videoplayer.ui.activity.PerviewPlayerActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize">
        </activity>
        <!--视频预缓存-->
        <activity android:name="gold.android.videoplayer.ui.activity.VideoCacheActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize">
        </activity>
        <!--权限申请-悬浮窗-->
        <activity android:name="gold.android.videoplayer.ui.activity.WindowPermissionActivity"
            android:launchMode="singleTask"
            android:theme="@style/TranslucentTheme"/>
    </application>
</manifest>